<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<filter>
		<filter-name>CharsetFilter</filter-name>
		<filter-class>hei.devweb.filters.CharsetFilter</filter-class>
		<init-param>
			<param-name>requestEncoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharsetFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>Accueil</servlet-name>
		<servlet-class>hei.devweb.controllers.AccueilServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>About</servlet-name>
		<servlet-class>hei.devweb.controllers.AboutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>New1</servlet-name>
		<servlet-class>hei.devweb.controllers.New1Servlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>New2</servlet-name>
		<servlet-class>hei.devweb.controllers.New2Servlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>New3</servlet-name>
		<servlet-class>hei.devweb.controllers.New3Servlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Gestion</servlet-name>
		<servlet-class>hei.devweb.controllers.GestionServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Accueil</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>About</servlet-name>
		<url-pattern>/about</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>New1</servlet-name>
		<url-pattern>/new1</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>New2</servlet-name>
		<url-pattern>/new2</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>New3</servlet-name>
		<url-pattern>/new3</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Gestion</servlet-name>
		<url-pattern>/gestion</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index</welcome-file>
	</welcome-file-list>
</web-app>